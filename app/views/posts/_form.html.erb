<%= form_with model: @post, local: true do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
        
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
     
      <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </p>
     
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  
    <%= link_to 'Back ', posts_path %>